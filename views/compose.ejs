<!-- header partial -->
<%- include('./partials/header'); %>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" id="postTitle" class="form-control" name="postTitle" autocomplete="off"/>
  </div>
  <div class="form-group">
    <label for="postBody">Post</label>
    <textarea
      name="postBody"
      id="postBody"
      class="form-control"
      cols="30"
      rows="10"
    ></textarea>
  </div>

  <input type="submit" value="Publish" class="btn btn-primary" />
</form>
